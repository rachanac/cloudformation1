[DEFAULT]

ignoreip = 127.0.0.1/8 216.223.20.132/32 0.0.0.0/0
bantime  = 600
findtime  = 600
maxretry = 3
backend = auto
usedns = warn



[ssh-iptables]
enabled  = true
filter   = sshd
action   = iptables[name=SSH, port=ssh, protocol=tcp]
           sendmail-whois[name=SSH, dest=root, sender=root]
logpath  = /var/log/secure
maxretry = 5
