[www]

user = deploy
group = deploy

listen = /run/php/php7.1-fpm.sock

listen.owner = deploy
listen.group = deploy

pm = dynamic
pm.max_children = 37
pm.start_servers = 4
pm.min_spare_servers = 2
pm.max_spare_servers = 4
pm.max_requests = 900
pm.status_path = /status

request_terminate_timeout = 600
